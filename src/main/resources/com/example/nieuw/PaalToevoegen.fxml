<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="parentPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            style="-fx-background-color: #F5F5F5;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.nieuw.PaalToevoegenController">
   <children>
      <!-- Zijpaneel -->
      <VBox style="-fx-background-color: #0C003C;" prefWidth="200.0" AnchorPane.topAnchor="0.0"
            AnchorPane.leftAnchor="0.0" AnchorPane.bottomAnchor="0.0">
         <children>
            <Label text="Safenight Solutions" textFill="#e2871c" style="-fx-font-size: 20px; -fx-font-weight: bold;"
                   alignment="CENTER" prefWidth="200.0" />
            <Label text="Home" textFill="WHITE" style="-fx-font-size: 16px; -fx-padding: 20 0 0 20;" />
            <Label text="Paal toevoegen" textFill="WHITE" style="-fx-font-size: 16px; -fx-padding: 10 0 0 20;" />
         </children>
      </VBox>

      <!-- Centraal formulier -->
      <VBox fx:id="formulierVBox" spacing="20.0" alignment="CENTER" style="-fx-background-color: #E2871C;"
            AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="200.0" AnchorPane.rightAnchor="0.0"
            AnchorPane.bottomAnchor="0.0">
         <!-- Titel -->
         <Label text="Paal Toevoegen" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #FFFFFF;" />

         <!-- Formuliervelden -->
         <VBox spacing="15.0" alignment="CENTER" prefWidth="300.0">
            <VBox spacing="5.0">
               <Label text="Paalnummer:" style="-fx-font-size: 14px; -fx-text-fill: #FFFFFF;" />
               <TextField fx:id="paalnummerField" promptText="Bijv. p10010"
                          style="-fx-border-color: #FFFFFF; -fx-border-radius: 5px; -fx-background-radius: 5px;" />
            </VBox>
            <VBox spacing="5.0">
               <Label text="Locatie:" style="-fx-font-size: 14px; -fx-text-fill: #FFFFFF;" />
               <TextField fx:id="locatieField" promptText="Bijv. Nieuwe laan, Den Haag"
                          style="-fx-border-color: #FFFFFF; -fx-border-radius: 5px; -fx-background-radius: 5px;" />
            </VBox>
            <VBox spacing="5.0">
               <Label text="Datum:" style="-fx-font-size: 14px; -fx-text-fill: #FFFFFF;" />
               <TextField fx:id="datumField" promptText="Bijv. 01-01-2024"
                          style="-fx-border-color: #FFFFFF; -fx-border-radius: 5px; -fx-background-radius: 5px;" />
            </VBox>
         </VBox>

         <!-- Opslaan knop -->
         <Button fx:id="opslaanButton" text="Opslaan"
                 style="-fx-background-color: #0C003C; -fx-text-fill: WHITE; -fx-font-size: 16px; -fx-padding: 10 20 10 20;"
                 onAction="#handleOpslaanButtonClick" />
      </VBox>
   </children>
</AnchorPane>
